<!DOCTYPE html>
        <html lang="ko">
        <head>
            <meta charset="UTF-8">
            <meta http-equiv="X-UA-Compatible" content="IE=edge">
            <meta name="viewport" content="width=device-width, initial-scale=1.0">
            <title>Document</title>
            <link rel="stylesheet" href="/css/home/style1.css">
            <script src="/js/home/login.js" defer></script>
            <script script src="jquery-3.6.0.min.js"></script>
            
        </head>
        <body>
            <section class="login-form">
                <h1>LOGIN IN</h1>
                <form action="">
                    <div class="int-area">
                        <input type="text" name="id" id="id"
                        autocomplete="off" required>
                        <label for="id">ID</label>
                    </div>
                    <div class="int-area">
                        <input type="password" name="psword" id="psword"
                        autocomplete="off" required>
                        <label for="psword">PASSWORD</label>
                    </div>
                    <div class="btn-area">
                        <button id = "btn"
                        type="submit">LOGIN</button>
        
                    </div>
                </form>
                <div class="caption">
                    <a href="/register">Create an acount</a>
                </div>
            </section>
        
            <script>
                let id = $('#id')
                let pw = $('#pw')
                let btn = $('#btn')
        
                $(btn).on('click', function(){
                    if($(id).val()==""){
                        $(id).next('label').addClass('warning');
                        setTimeout(function(){
                            $('label').removeClass('warning');
                        },1500)
                    }
                    else if($(pw).val()==""){
                        $(pw).next('label').addClass('warning');
                        setTimeout(function(){
                            $('label').removeClass('warning');
                        },1500)
                    }
                });
            </script>
        </body>
        </html>
